// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Channel {
  id                Int       @id @default(autoincrement())
  companyId         Int
  name              String
  platform          Platform
  status            String    @default("active") // active, inactive, error
  credentials       Json?     // Encrypted keys should be handled at app layer
  storeUrl          String?
  lastSyncAt        DateTime?
  syncError         String?   @db.Text
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt

  listings          Listing[]
}

enum Platform {
  SHOPIFY
  AMAZON
  EBAY
  ETSY
  WALMART
}

model Listing {
  id                Int       @id @default(autoincrement())
  companyId         Int
  channelId         Int
  channel           Channel   @relation(fields: [channelId], references: [id])
  stockItemId       Int       // Reference to Product in product-service
  variantId         Int?      // Reference to Variant in product-service
  marketplaceId     String?   // External platform ID
  marketplaceSku    String?
  listingUrl        String?
  titleOverride     String?
  priceOverride     Decimal?  @db.Decimal(15, 2)
  quantityAllocated Int       @default(0)
  status            String    @default("draft") // draft, active, paused, error
  syncStatus        String    @default("synced")
  isPublished       Boolean   @default(false)
  publishedAt       DateTime?
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt
  version           Int       @default(1)

  @@index([companyId])
  @@index([channelId])
}
